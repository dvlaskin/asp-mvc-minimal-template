@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@model LoginDto
@inject SignInManager<AppUser> SignInManager
@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment hostingEnv

@{
    ViewData["Title"] = "Log in";
}

<div class="login-box">

    <!-- /.login-logo -->
    <div class="login-box-body">
        <div class="login-logo">
            <a href="/">Back to Homepage</a>
        </div>
        <p class="login-box-msg">Sign in to start your session</p>
        <div asp-validation-summary="ModelOnly" id="divValidationSummary" class="text-danger wrapper"></div>
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="form-group has-feedback">
                <label asp-for="Email"></label>
                @if (@hostingEnv.IsDevelopment())
                {
                    <input asp-for="Email" type="email" value="admin@webapp.io" class="form-control" placeholder="Email" />
                }
                else
                {
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                }
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="Password"></label>
                @if (@hostingEnv.IsDevelopment())
                {
                    <input asp-for="Password" type="password" value="123" class="form-control" placeholder="Password" />
                }
                else
                {
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                }
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-xs-2"></div>
                <div class="col-xs-6">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox" asp-for="RememberMe"> @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
            <div class="social-auth-links text-center hidden">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                    <i class="fa fa-facebook"></i> Sign in using
                    Facebook
                </a>
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                    <i class="fa fa-google-plus"></i> Sign in using
                    Google+
                </a>
            </div>
            <!-- /.social-auth-links -->
            <a asp-action="ForgotPassword" class="hidden">I forgot my password</a><br>
            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-center hidden">
                Register a new membership
            </a>
        </form>


    </div>
    <!-- /.login-box-body -->
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
}
